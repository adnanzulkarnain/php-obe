{
    "name": "obe/sistem-kurikulum",
    "description": "Sistem Informasi Kurikulum OBE dengan Multi-Curriculum Support",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "ext-pdo": "*",
        "ext-json": "*",
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "respect/validation": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
